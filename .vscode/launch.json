{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Debug Catalog.API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build: Catalog.API",
      "program": "${workspaceFolder}/src/Services/Catalog/Catalog.API/bin/Debug/net8.0/Catalog.API.dll",
      "cwd": "${workspaceFolder}/src/Services/Catalog/Catalog.API",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5000"
      },
      "stopAtEntry": false,
      "console": "integratedTerminal"
    },
    {
      "name": ".NET Launch (http) - localhost:5000 (Catalog.API)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build: Catalog.API",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/Services/Catalog/Catalog.API/Catalog.API.csproj",
        "--no-build"
      ],
      "cwd": "${workspaceFolder}/src/Services/Catalog/Catalog.API",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5000"
      },
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
    {
      "name": ".NET Launch (https+http) - 5050/5000 (Catalog.API)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build: Catalog.API",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/Services/Catalog/Catalog.API/Catalog.API.csproj",
        "--no-build"
      ],
      "cwd": "${workspaceFolder}/src/Services/Catalog/Catalog.API",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:5050;http://localhost:5000"
      },
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
    {
      "name": ".NET Core Launch (web)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/Services/Catalog/Catalog.API/bin/Debug/net8.0/Catalog.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Services/Catalog/Catalog.API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    },
    {
      "name": "Containers: .NET Launch",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "netCore": {
        "appProject": "${workspaceFolder}/src/Services/Catalog/Catalog.API/Catalog.API.csproj"
      }
    },
    {
      "name": "Attach: Catalog.API (Docker)",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickRemoteProcess}",
      "pipeTransport": {
        "pipeProgram": "docker",
        "pipeArgs": ["exec", "-i", "src-catalog.api-1"],
        "debuggerPath": "/vsdbg/vsdbg",
        "quoteArgs": false
      },
      "sourceFileMap": {
        "/src": "${workspaceFolder}"
      }
    }
  ]
}
