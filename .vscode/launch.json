{
  "version": "0.2.0",
  "configurations": [
        {
      "name": ".NET Debug Catalog.API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build: Catalog.API",

      "program": "${workspaceFolder}/src/Services/Catalog/Catalog.API/bin/Debug/net8.0/Catalog.API.dll",
      "cwd": "${workspaceFolder}/src/Services/Catalog/Catalog.API",

      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5000"
      },

      "stopAtEntry": false,
      "console": "integratedTerminal"
    },
    {
      "name": ".NET Launch (http) - localhost:5000 (Catalog.API)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build: Catalog.API",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/Services/Catalog/Catalog.API/Catalog.API.csproj",
        "--no-build"
      ],
      "cwd": "${workspaceFolder}/src/Services/Catalog/Catalog.API",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5000"
      },
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
    {
      "name": ".NET Launch (https+http) - 5050/5000 (Catalog.API)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build: Catalog.API",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/Services/Catalog/Catalog.API/Catalog.API.csproj",
        "--no-build"
      ],
      "cwd": "${workspaceFolder}/src/Services/Catalog/Catalog.API",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:5050;http://localhost:5000"
      },
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    }
  ]
}
