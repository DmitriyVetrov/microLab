{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Debug Catalog.API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build: Catalog.API",
      "program": "${workspaceFolder}/src/Services/Catalog/Catalog.API/bin/Debug/net8.0/Catalog.API.dll",
      "cwd": "${workspaceFolder}/src/Services/Catalog/Catalog.API",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5000"
      },
      "stopAtEntry": false,
      "console": "integratedTerminal"
    },
    {
      "name": ".NET Debug Basket.API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build: Basket.API",
      "program": "${workspaceFolder}/src/Services/Basket/Basket.API/bin/Debug/net8.0/Basket.API.dll",
      "cwd": "${workspaceFolder}/src/Services/Basket/Basket.API",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5001"
      },
      "stopAtEntry": false,
      "console": "integratedTerminal"
    },
    {
      "name": "Attach: Catalog.API (Docker)",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickRemoteProcess}",
      "pipeTransport": {
        "pipeProgram": "docker",
        "pipeArgs": ["exec", "-i", "src-catalog.api-1"],
        "debuggerPath": "/vsdbg/vsdbg",
        "quoteArgs": false
      },
      "sourceFileMap": {
        "/src": "${workspaceFolder}"
      }
    }
  ]
}
